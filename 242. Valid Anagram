// Solution 1:
func isAnagram(s string, t string) bool {
    if len(s) != len(t) {
        return false
    }

    freq := map[rune]int{}

    for _, ch := range s {
        freq[ch]++
    }

    for _, ch := range t {
        freq[ch]--

        if freq[ch] < 0 {
            return false
        }
    }

    return true
}

// Solution 2:
func isAnagram(s string, t string) bool {
    if len(s) != len(t) {
        return false
    }

    sr := []byte(s)
    tr := []byte(t)

    slices.Sort(sr)
    slices.Sort(tr)

    return string(sr) == string(tr)
}
